<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Cabeçalho"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_box"
        android:orientation="horizontal"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="68dp"
            android:src="@drawable/ufrpe_branco1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="462dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Cabeçalho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Cabeçalho"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/Email"
            android:layout_width="359dp"
            android:layout_height="84dp"
            android:hint="Digite seu e-mail"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/ConfirmEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite novamente o e-mail"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/buttonConfirmaEmail"
            android:layout_width="126dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_marginBottom="148dp"
            android:onClick="onConfirmClick"
            android:text="Confirmar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>