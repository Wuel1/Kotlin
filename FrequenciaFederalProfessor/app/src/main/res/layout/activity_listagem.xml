<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".activities.FrequenciaHost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_box">

        <ImageView
            android:id="@+id/button_voltar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="105dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ufrpe_cortado" />

    </LinearLayout>
    <TextView
        android:id="@+id/NomeTabela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da tabela"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_btn_2"
        android:padding="10dp"/>

    <Spinner
        android:id="@+id/options_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textAlignment="center"
        android:background="@drawable/bg_whitebox"
        android:padding="10sp"
        android:layout_marginHorizontal="30dp"/>
    <Spinner
        android:id="@+id/options_spinnerPeriodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textAlignment="center"
        android:background="@drawable/bg_whitebox"
        android:padding="10sp"
        android:layout_marginHorizontal="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/Atualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:padding="10dp"
            android:textColor="#B41C2C4C"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Atualizar"/>

        <Button
            android:id="@+id/Exportar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:padding="10dp"
            android:textColor="#B41C2C4C"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Exportar"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/bg_whitebox">

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:cacheColorHint="@color/white"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

    </LinearLayout>






</LinearLayout>