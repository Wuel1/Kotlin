<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".activities.FrequenciaHost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_box">

        <ImageView
            android:id="@+id/button_voltar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="105dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ufrpe_cortado" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Nome do dispositivo:"
            android:id="@+id/nomeDispositivo"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn"
                android:id="@+id/AtivaBluetooth"
                android:text="Ativar Bluetooth"
                android:padding="10dp"
                android:layout_margin="30dp"
                android:textColor="#B41C2C4C"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn"
                android:id="@+id/DesativaBluetooth"
                android:text="Desativar Bluetooth"
                android:padding="10dp"
                android:textColor="#B41C2C4C"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btn"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_bluetooth_connected_24"
                android:id="@+id/bluetoothImagem"
                android:layout_gravity="center"
                android:layout_margin="20dp"/>


        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/Timer"
            android:background="@drawable/bg_btn_2"
            android:layout_marginTop="10dp"
            android:hint="5:00"
            android:padding="5dp"
            android:textColorHint="#94FFFFFF"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:id="@+id/PareadosBluetooth"
            android:text="Iniciar Frequência"
            android:padding="10dp"
            android:layout_margin="30dp"
            android:textColor="#B41C2C4C"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:id="@+id/Atualizar"
            android:text="Atualizar"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp"
            android:textColor="#B41C2C4C"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_2"
            android:id="@+id/lista_pareados"
            android:padding="10dp"
            android:gravity="center"
            android:text="0 Dispositivos Pareados"
            android:textColor="@color/white"
            android:textSize="13sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Listagem da Frequência"
            android:textColor="#B41C2C4C"
            android:background="@drawable/bg_btn"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="80dp"
            android:id="@+id/listagem"/>


    </LinearLayout>

</LinearLayout>